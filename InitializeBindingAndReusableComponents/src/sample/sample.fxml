<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller">

    <!-- Binding -->
    <Label text="I love chicken" fx:id="firstLabel"/>
    <Label text="${firstLabel.text}"/>  <!-- Whenever you see a dollar sign, it means reference to something -->


    <!-- Reusable Component-->
    <fx:define>
        <ToggleGroup fx:id="toggleGroup" />
    </fx:define>

    <Label text="Difficulty"/>

    <RadioButton text="Easy" toggleGroup="$toggleGroup"/> <!-- Referencing to the toggleGroup between fx:define blocks -->
    <RadioButton text="Medium" toggleGroup="$toggleGroup"/>
    <RadioButton text="Hard" toggleGroup="$toggleGroup"/>

</VBox>